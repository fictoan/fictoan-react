{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6"
        ],
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ES2015",
        "target": "es6",
        "jsx": "react",
        "rootDir": "src",
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
