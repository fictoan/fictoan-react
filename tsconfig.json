{
    "compilerOptions" : {
        "target"                           : "es2016",
        "esModuleInterop"                  : true,
        "forceConsistentCasingInFileNames" : true,
        "strict"                           : true,
        "skipLibCheck"                     : true,
        "jsx"                              : "react",
        "module"                           : "ESNext",
        "declaration"                      : true,
        "sourceMap"                        : true,
        "outDir"                           : "dist",
        "moduleResolution"                 : "node",
        "allowSyntheticDefaultImports"     : true,
        "emitDeclarationOnly"              : true,
        "types"                            : [
            "vite-plugin-svgr/client"
        ],
        "paths"                            : {
            "@/*" : [
                "./src/*"
            ]
        }
    }
}
