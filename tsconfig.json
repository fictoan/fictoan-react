{
    "compilerOptions" : {
        "target"                           : "es2016",
        "esModuleInterop"                  : true,
        "resolveJsonModule"                : true,
        "forceConsistentCasingInFileNames" : true,
        "strict"                           : true,
        "skipLibCheck"                     : true,
        "jsx"                              : "react",
        "module"                           : "ESNext",
        "declaration"                      : true,
        "sourceMap"                        : true,
        "outDir"                           : "dist",
        "moduleResolution"                 : "bundler",
        "allowSyntheticDefaultImports"     : true,
        "rootDir"                          : "./src",
        "emitDeclarationOnly"              : true,
        "declarationDir"                   : "./dist/types",
        "declarationMap"                   : true,
        "allowJs"                          : true,
        "isolatedModules"                  : true,
        "noEmitOnError"                    : true,
        "composite"                        : true,
        "baseUrl"                          : ".",
        "types"                            : [
            "vite-plugin-svgr/client",
            "node",
            "react",
            "react-dom"
        ],
        "paths"                            : {
            "@/*"          : [
                "./src/*"
            ],
            "components/*" : [
                "./src/components/*"
            ]
        }
    },
    "include"         : [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts",
        "vite.config.ts"
    ],
    "exclude"         : [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.stories.tsx"
    ]
}
